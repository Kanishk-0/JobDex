<EditForm Model="@companies" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Name: </label>
            <div>
                <InputText @bind-Value="companies.CompanyName" class="form-control" />
                <ValidationMessage For="@(() => companies.CompanyName)" />
            </div>
        </div>
        <div class="form-group">
            <label>Email: </label>
            <div>
                <InputText @bind-Value="companies.CompanyEmail" class="form-control" />
                <ValidationMessage For="@(() => companies.CompanyEmail)" />
            </div>
        </div>
        <div class="form-group">
            <label>Number: </label>
            <div>
                <InputNumber @bind-Value="companies.CompanyNo" class="form-control" />
                <ValidationMessage For="@(() => companies.CompanyNo)" />
            </div>
        </div>
    </fieldset>

    @if (!Disabled)
    {    <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }

    <BackToList Target="companies" />


</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Company companies { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}