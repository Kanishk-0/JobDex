@page "/companies/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3>Create</h3>
<hr />
<br />

<EditForm Model="@company" OnValidSubmit="CreateCompany">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>Name: </label>
        <div>
            <InputText @bind-Value="company.CompanyName" class="form-control" />
            <ValidationMessage For="@(() => company.CompanyName)" />
        </div>
    </div>
    <div class="form-group">
        <label>Email: </label>
        <div>
            <InputText @bind-Value="company.CompanyEmail" class="form-control" />
            <ValidationMessage For="@(() => company.CompanyEmail)" />
        </div>
    </div>
    <div class="form-group">
        <label>Number: </label>
        <div>
            <InputNumber @bind-Value="company.CompanyNo" class="form-control" />
            <ValidationMessage For="@(() => company.CompanyNo)" />
        </div>
    </div>
    <div class="form-group">
        <label>Description: </label>
        <div>
            <InputText @bind-Value="company.CompanyDesc" class="form-control" />
            <ValidationMessage For="@(() => company.CompanyDesc)" />
        </div>
    </div>
    
    <button type="submit" class="btn btn-success btn-block">
        Create Company
    </button>


</EditForm>

@code {
    Company company = new Company();

    private async Task CreateCompany()
    {
        await _client.PostAsJsonAsync(Endpoints.CompaniesEndpoint, company);
        _navManager.NavigateTo("/companies/");
    }

}
